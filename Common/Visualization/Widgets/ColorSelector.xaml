        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom">
                <TextBlock Text="RGB" FontWeight="Bold" Margin="2" />
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="TxtRgbRed" Text="255" FontSize="11" Padding="-1" MaxLength="3" HorizontalAlignment="Center"
                             Width="24" Margin="1" LostFocus="TxtRgbRed_LostFocus" />
